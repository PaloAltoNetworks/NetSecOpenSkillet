<entry name="{{ eth_interface_trust }}">
      <layer3>
        <ipv6>
          <neighbor-discovery>
            <router-advertisement>
              <enable>no</enable>
            </router-advertisement>
          </neighbor-discovery>
        </ipv6>
        <ndp-proxy>
          <enabled>no</enabled>
        </ndp-proxy>
        <ip>
          <entry name="192.168.1.254/24"/>
        </ip>
        <interface-management-profile>PING</interface-management-profile>
        <lldp>
          <enable>no</enable>
        </lldp>
      </layer3>
    </entry>
<entry name="{{ eth_interface_untrust }}">
      <layer3>
        <ipv6>
          <neighbor-discovery>
            <router-advertisement>
              <enable>no</enable>
            </router-advertisement>
          </neighbor-discovery>
        </ipv6>
        <ndp-proxy>
          <enabled>no</enabled>
        </ndp-proxy>
        <ip>
          <entry name="192.168.2.254/24"/>
        </ip>
        <interface-management-profile>PING</interface-management-profile>
        <lldp>
          <enable>no</enable>
        </lldp>
      </layer3>
    </entry>
